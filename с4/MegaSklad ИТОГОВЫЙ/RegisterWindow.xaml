<Window x:Class="MegaSklad.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MegaSklad: Регистрация" Height="430" Width="400" WindowStartupLocation="CenterScreen" Icon="/icon.png">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Email:" />
            <TextBox x:Name="EmailTextBox" Margin="0,0,0,10" />

            <TextBlock Text="Имя пользователя:" />
            <TextBox x:Name="UsernameTextBox" Margin="0,0,0,10" />

            <TextBlock Text="Телефон:" />
            <TextBox x:Name="PhoneTextBox" Margin="0,0,0,10" />

            <TextBlock Text="Пароль:" />
            <PasswordBox x:Name="PasswordTextBox" Margin="0,0,0,10" />

            <TextBlock Text="Подтвердите пароль:" />
            <PasswordBox x:Name="ConfirmPasswordTextBox" Margin="0,0,0,10" />


            <Button x:Name="RegisterButton" Content="Зарегистрироваться" Click="RegisterButton_Click" Margin="0,0,0,10" Height="48" />
            <Button x:Name="ToLoginButton" Content="Уже есть аккаунт? Войти" Click="ToLoginButton_Click" Margin="0,0,0,10" Height="31" />
        </StackPanel>
    </Grid>
</Window>