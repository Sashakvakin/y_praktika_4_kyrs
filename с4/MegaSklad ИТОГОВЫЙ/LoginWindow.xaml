<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x1="http://schemas.microsoft.com/winfx/2006/xaml" x1:Class="MegaSklad.LoginWindow"
        Title="MegaSklad: Вход" Height="410" Width="400" WindowStartupLocation="CenterScreen" Icon="/icon.png">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Email:" />
            <TextBox x1:Name="EmailTextBox" Margin="0,0,0,10" />
            <TextBlock Text="Пароль:" />
            <PasswordBox x1:Name="PasswordTextBox" Margin="0,0,0,10" />
            <TextBox x1:Name="EmailTextBoxPrimer" Text="admin@gmail.com" Height="29" FontStyle="Italic" Width="136" BorderBrush="White" Foreground="#FF5EBDF9"  />
            <TextBox x1:Name="EmailTextBoxPrimer1" Text="kladovshik@gmail.com" Margin="0,0,0,0" Height="29" FontStyle="Italic" Width="136" BorderBrush="White" Foreground="#FF5EBDF9"  />
            <TextBox x1:Name="EmailTextBoxPrimer2" Text="manager@gmail.com" Margin="0,0,0,0" Height="29" FontStyle="Italic" Width="136" BorderBrush="White" Foreground="#FF5EBDF9"   />
            <TextBox x1:Name="EmailTextBoxPrimer3" Text="buhgalter@gmail.com" Margin="0,0,0,20" Height="29" FontStyle="Italic" Width="136" BorderBrush="White" Foreground="#FF5EBDF9"   />

            <Button x1:Name="LoginButton" Content="Войти" Click="LoginButton_Click" Margin="0,0,0,10" Height="48" />
            <Button x1:Name="RegisterButton" Content="У вас нет аккаунта? Регистрация" Click="RegisterButton_Click" Margin="0,0,0,10" Height="31" />
        </StackPanel>
    </Grid>
</Window>