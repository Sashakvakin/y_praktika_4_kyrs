<Window x:Class="MegaSklad.EditPostavshikWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование поставщика" Height="480" Width="400" WindowStartupLocation="CenterScreen" Icon="/icon.png">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Название поставщика:"/>
            <TextBox x:Name="НазваниеTextBox" Text="{Binding название_поставщика}" Margin="0,0,0,10"/>

            <TextBlock Text="ИНН поставщика:"/>
            <TextBox x:Name="ИННTextBox" Text="{Binding ИНН_поставщика}" Margin="0,0,0,10"/>

            <TextBlock Text="КПП поставщика:"/>
            <TextBox x:Name="КППTextBox" Text="{Binding КПП_поставщика}" Margin="0,0,0,10"/>

            <TextBlock Text="Контактное лицо:"/>
            <TextBox x:Name="КонтактноеЛицоTextBox" Text="{Binding контактное_лицо}" Margin="0,0,0,10"/>

            <TextBlock Text="Телефон поставщика:"/>
            <TextBox x:Name="ТелефонTextBox" Text="{Binding телефон_поставщика}" Margin="0,0,0,10"/>

            <TextBlock Text="Email поставщика:"/>
            <TextBox x:Name="EmailTextBox" Text="{Binding email_поставщика}" Margin="0,0,0,10"/>

            <TextBlock Text="Адрес поставщика:"/>
            <TextBox x:Name="АдресTextBox" Text="{Binding адрес_поставщика}" Margin="0,0,0,20"/>

            <Button Content="Сохранить" Click="SaveButton_Click" HorizontalAlignment="Center" Width="110"/>
        </StackPanel>
    </Grid>
</Window>